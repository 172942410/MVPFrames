<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <padding android:left="12dp" android:right="12dp"></padding>
            <!-- 渐变 -->
            <gradient android:angle="90" android:endColor="#0279e7" android:startColor="#39a9f7" android:type="linear"></gradient>
            <!-- 圆角 -->
            <corners android:radius="3dp" />
        </shape></item>
    <!-- 默认 -->
    <item><shape>
            <padding android:left="12dp" android:right="12dp"></padding>
            <!-- 渐变 -->
            <gradient android:angle="90" android:endColor="#39a9f7" android:startColor="#0279e7" android:type="linear"></gradient>
            <!-- 圆角 -->
            <corners android:radius="3dp" />
        </shape></item>

</selector>