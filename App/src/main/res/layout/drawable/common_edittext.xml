<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <padding android:bottom="7dp" android:left="5dp" android:right="5dp" android:top="7dp"></padding>

            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="#ff428bca" />

            <corners android:radius="3dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <padding android:bottom="7dp" android:left="5dp" android:right="5dp" android:top="7dp"></padding>

            <solid android:color="#ffe0e0e0" />

            <stroke android:width="0.6dp" android:color="#ccc" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <padding android:bottom="7dp" android:left="5dp" android:right="5dp" android:top="7dp"></padding>

            <solid android:color="@color/white" />

            <stroke android:width="0.6dp" android:color="#ccc" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>