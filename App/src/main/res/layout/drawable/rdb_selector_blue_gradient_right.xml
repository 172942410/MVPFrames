<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <padding android:bottom="8dp" android:left="18dp" android:right="18dp" android:top="8dp"></padding>

            <!-- 渐变 -->
            <gradient android:angle="90" android:endColor="#39a9f7" android:startColor="#0360b5" android:type="linear"></gradient>

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="3dp" android:topLeftRadius="0dp" android:topRightRadius="3dp"></corners>
        </shape></item>
    <!-- 未选中时效果 -->
    <item android:state_checked="false"><shape>
            <padding android:bottom="8dp" android:left="18dp" android:right="18dp" android:top="8dp"></padding>

            <solid android:color="#00FFFFFF" />

            <stroke android:width="1dp" android:color="#217acc" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="3dp" android:topLeftRadius="0dp" android:topRightRadius="3dp"></corners>
        </shape></item>

</selector>